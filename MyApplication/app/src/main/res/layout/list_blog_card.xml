<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:longClickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/blogcard"
        android:background="@drawable/card_background_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/card_top"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/img_layout"
                android:layout_height="@dimen/blogcardimg_heigth">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/blog_img" />
                <View
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:alpha="0.4"
                    android:background="@drawable/gradient"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignBottom="@+id/img_layout"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/topic_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topic"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/topic"
                    android:id="@+id/date"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="10dp"
                    android:textColor="@color/blue_grey_300" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/card_middle"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_margin="5dp"
                android:background="@color/blue_grey_300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/description"
                android:fontFamily="sans-serif"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_margin="5dp"
                android:background="@color/blue_grey_300"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/card_bottom"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <img.myapplication.RoundImageView
                android:layout_width="@dimen/roundimage_length"
                android:layout_height="@dimen/roundimage_length"
                android:id="@+id/blog_dp"
                android:padding="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/category"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/blog_dp"
                android:layout_toEndOf="@+id/blog_dp"
                android:paddingLeft="5dp"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif"
                android:textColor="@color/yellow_700" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/category"
                android:layout_toRightOf="@+id/blog_dp"
                android:layout_toEndOf="@+id/blog_dp"
                android:id="@+id/group"
                android:paddingLeft="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/blue_grey_300" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>