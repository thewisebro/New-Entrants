<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"
    android:longClickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/card_layout"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:padding="12px">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_view"
            android:outlineProvider="paddedBounds"
            android:layout_margin="12px">

            <TextView
                android:id="@+id/j_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow_700"
                android:textSize="@dimen/font_size_small"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/j_name"
                android:id="@+id/j_loc"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/j_town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey_300"
                    android:layout_below="@+id/j_name"/>
                <TextView
                    android:id="@+id/j_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey_300"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/j_town"
                    android:layout_below="@+id/j_name"/>
            </LinearLayout>

            <TextView
                android:id="@+id/j_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey_300"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/j_loc"
                android:layout_alignParentLeft="true" />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/toggle_junior"
                android:background="@drawable/check"
                android:textOn=""
                android:textOff=""
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha=".3"
                android:layout_margin="12px" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineProvider="paddedBounds"
            android:orientation="vertical"
            android:id="@+id/down_view"
            android:textAlignment="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_margin="5dp"
                android:background="@color/blue_grey_300"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Query"
                android:id="@+id/textView11"
                android:textColor="@color/blue_grey_300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/j_query"
                android:textColor="@color/blue_grey_900" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_margin="5dp"
                android:background="@color/blue_grey_300"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CONNECT"
                android:id="@+id/connect"
                android:layout_gravity="right"
                android:textColor="@color/yellow_700"
                android:textStyle="bold"
                android:layout_margin="12px" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>