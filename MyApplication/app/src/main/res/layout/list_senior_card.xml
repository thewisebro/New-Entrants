<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:background="@drawable/card_background_selector"
    android:descendantFocusability="beforeDescendants"
    android:animateLayoutChanges="true"
    android:longClickable="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:descendantFocusability="afterDescendants"
        android:outlineProvider="paddedBounds">

        <TextView
            android:id="@+id/s_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_700"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="roboto-regular" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_name"
            android:id="@+id/s_loc"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/s_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey_300"
                android:layout_below="@+id/s_name"/>

            <TextView
                android:id="@+id/s_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey_300"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/s_town"
                android:layout_below="@+id/s_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/s_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_grey_300"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/s_loc"/>

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/toggle_senior"
            android:background="@drawable/check"
            android:textOn=""
            android:textOff=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="paddedBounds"
        android:padding="15dp"
        android:id="@+id/down_view"
        android:animateLayoutChanges="true"
        android:textAlignment="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_contact"
            android:layout_alignParentTop="true"
            android:textColor="@color/blue_grey_300"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_email"
            android:textColor="@color/blue_grey_300"
            android:layout_below="@+id/s_contact"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_fblink"
            android:textColor="@color/blue_grey_300"
            android:layout_below="@+id/s_email"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>